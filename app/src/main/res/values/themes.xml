<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CampusSafety" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->

        <!-- Corrected names to match your colors.xml -->
        <item name="android:statusBarColor">@color/background_light</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:navigationBarColor">@color/background_light</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:colorBackground">@color/background_light</item>

        <!-- Set default text colors for day mode -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>

        <!-- Define the app's primary colors -->
        <item name="colorPrimary">@color/accent_blue</item>
        <item name="colorSecondary">@color/sos_red</item>
    </style>

    <style name="Theme.CampusSafety" parent="Base.Theme.CampusSafety" />
</resources>

